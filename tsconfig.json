{
    "compilerOptions": {
      "target": "es2015",                          
      "module": "commonjs",  
// complie 된 파일이 있는 곳                   
      "outDir": "./out",                        
      "strict": true,     
// typescript 파일 있는 곳    
      "declaration": true,                  
      "rootDirs": ["src"],                   
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true  
    },
    "include": ["./src"]
}
